<div class ='container'>

<%= @gym_comment.gym_id %>

  <div class= 'row'>
    <div class ='col-md-4'>
      <h2 class ='mb-5 mt-5'><%= @gym.gym_name %></h2>
      <div><%= attachment_image_tag @gym, :image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg" %></div>
    </div>
  </div>

  <!--コメント機能-->
  <div class='mt-2'>
    <%= form_with model:@gym_comment, url:gym_comments_path(:gym_id=>@gym.id), local: true do |f| %>
    <%= f.text_area :comment, placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
    <% end %>
  </div>

  <!--コメント一覧-->
  <div>
    <div>
      <h3 class ='mt-3'>コメント</h3>
      <ul class="list-group">
        <% @gym_comments.each do |gym_comment| %>
          <li class="list-group-item"><%= gym_comment.comment %></li>

  <!--いいね機能-->
          <li>
            <% if gym_comment.liked_by?(current_user) %>
              <p>
                <%= link_to gym_comment_like_path(gym_comment), method: :delete do %>
                  ♥<%= gym_comment.likes.count %> いいね
                <% end %>
              </p>
              <% else %>

              <p>
                <%= link_to gym_comment_likes_path(gym_comment), method: :post do %>
                  ♡<%= gym_comment.likes.count %> いいね
                <% end %>
              </p>
            <% end %>
          </li>

        <% end %>
      </ul>
    </div>
  </div>



</div>

