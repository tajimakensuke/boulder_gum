<div class ='container'>
    <h2 class ='mb-5 mt-5'>
        <%= @gym.gym_name %>
    </h2>

  <div class= 'row'>
    <div class ='col-4'>


<!--画像表示-->
      <div class ='mb-5'><%= attachment_image_tag @gym, :image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg" %></div>
    </div>
    <div class = 'col-8'>
      <h6 class = 'mb-5'>
        ジム情報
      </h6>
      <table class ='table'>
        <tr>
          <td>住所</td>
          <td><%= @gym.address %></td>
        </tr>
        <tr>
          <td>最寄り駅</td>
          <td><%= @gym.station %></td>
        </tr>
      </table>

<!--お気に入り登録（非同期）-->
      <div id="favorites_buttons_<%= @gym.id %>">
        <%= render partial: 'public/favorites/favorite', locals: {gym: @gym} %>
      </div>


    </div>
  </div>


<!--地図表示-->
      <div id="map"></div>
        <script>
          let map;
          function initMap() {
            // geocoderを初期化
            geocoder = new google.maps.Geocoder()
            map = new google.maps.Map(document.getElementById('map'), {
              // コントローラーで定義した変数から緯度経度を呼び出し、マップの中心に表示
              center: {
                lat: gon.gym.latitude,
                lng: gon.gym.longitude
              },
              // マップの倍率はお好みで
              zoom: 17,
            });
            marker = new google.maps.Marker({
              // コントローラーで定義した変数から緯度経度を呼び出し、マーカーを立てる
              position: {
                lat: gon.gym.latitude,
                lng: gon.gym.longitude
              },
              map: map
            });
          }
        </script>
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA6VscNwMZdbm_QFHc8DiX4gKGtNisrEoQ&callback=initMap"></script>



  <!--コメント機能-->
  <div class='mt-2'>
    <%= form_with model:@gym_comment, url:gym_comments_path(:gym_id=>@gym.id), local: true do |f| %>
    <%= f.text_area :comment, placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
    <% end %>
  </div>

  <!--コメント一覧-->
  <div>
    <div>
      <h3 class ='mt-3'>コメント</h3>
      <ul class="list-group">
        <% @gym_comments.each do |gym_comment| %>
          <li class="list-group-item"><%= gym_comment.comment %> <%= gym_comment.user.name %></li>

  <!--いいね機能-->
          <li>
            <% if !user_signed_in? %>
            <P>♥<%= gym_comment.likes.count %>いいね</P>

            <% elsif gym_comment.liked_by?(current_user) %>
              <p>
                <%= link_to gym_comment_like_path(gym_comment), method: :delete do %>
                  ♥<%= gym_comment.likes.count %> いいね
                <% end %>
              </p>
              <% else %>

              <p>
                <%= link_to gym_comment_likes_path(gym_comment), method: :post do %>
                  ♡<%= gym_comment.likes.count %> いいね
                <% end %>
              </p>
            <% end %>
          </li>

        <% end %>
      </ul>
    </div>
  </div>



</div>

