<div class ="container">
    <h2 class='mb-5 mt-5'>ジム一覧</h2>


  <% @gyms.each do |gym| %>
    <div class="row mt-3">
      <div class="col-5">

          <h3 class='mt-3 mb-1'><%= link_to gym.gym_name, gym_path(gym.id) %></h3>
          <div><%= attachment_image_tag gym, :image, size: "130x130", format: 'jpeg' %></div>
      </div>

      <div class="col-7 mt-4">
        <h4>Introduction</h4>
        <p><%= gym.introduction %></p>
      </div>
    </div>
  <% end %>

  <div class='row'>
    <div class ='m-3'>
      <%= paginate @gyms %>
    </div>
  </div>


</div>