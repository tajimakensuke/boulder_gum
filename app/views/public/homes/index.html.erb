<div class = "container">
    <div class = "row">
      <div class = 'col-12 mt-5 mb-5'>
        <img src="/assets/bouider_s_top.jpg" class="img-fluid" alt="Responsive image" width='100%'>
      </div>
    </div>

    <!--最新コメント-->
    <div class='mt-5'>
      <h4>最新コメント</h4>
        <table class='table'>
          <% @gym_comments.each do |comment| %>
            <tr>
              <td><%= link_to comment.gym.gym_name, gym_path(comment.gym.id) %></td>
              <td><%= comment.comment %></td>
              <td><%= comment.user.name %></td>
            </tr>
          <% end %>
        </table>

    </div>


</div>